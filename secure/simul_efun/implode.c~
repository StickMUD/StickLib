varargs string
implode(string *x, string a, string b)
{
mixed tmp;
string s, ret;
	if (!b) ret = efun::implode(x, a);
	switch (sizeof(x)) {
	case 0: case 1:
		ret = efun::implode(x, a);
	case 2:
		ret = efun::implode(x, b);
	default:
// "Nice" little kludge to make it work. *cough*
		tmp = x[<1];
		if (!stringp(tmp))
			ret = implode(x, a);
// Kludge, for arrays that aren't quite ok... :-/
		else { x[<1] = 0;
		s = sprintf("%s%s%s", efun::implode(x, a), b, tmp);
		x[<1] = tmp;
		ret = s;
           }
	}

    return ret;
}
