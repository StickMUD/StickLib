varargs string
implode(string *x, string a, string b)
{
    mixed tmp;
    string s;
    if (!b) return efun::implode(x, a);
    switch (sizeof(x)) {
    case 0: case 1:
	return efun::implode(x, a);
    case 2:
	return efun::implode(x, b);
    default:
	// "Nice" little kludge to make it work. *cough*
	tmp = x[<1];
	if (!stringp(tmp))
	    return implode(x, a);
	// Kludge, for arrays that aren't quite ok... :-/
	x[<1] = 0;
	s = sprintf("%s%s%s", efun::implode(x, a), b, tmp);
	x[<1] = tmp;
	return s;
    }
}
